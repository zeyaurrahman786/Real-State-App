<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create a New Listing</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          name="listing[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <lable for="image.filename" class="form-label">Image filename</lable>
        <input
          name="listing[image][filename]"
          placeholder="enter image filename"
          type="text"
          class="form-control"
        />
        <div class="invalid-feedback">Please enter a valid image filename</div>
      </div>

      <div class="mb-3">
        <lable for="image.url" class="form-label">Upload Listing Image</lable>
        <input name="listing[image][url]" type="file" class="form-control" />
        required
        <div class="invalid-feedback">Please enter a valid image link</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            name="listing[price]"
            placeholder="1200"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid country</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          name="listing[location]"
          placeholder="Sasaram,Bihar"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid location</div>
      </div>

      <br /><br />
      <button class="btn btn-dark add mt-3">Add</button>
      <br /><br />
    </form>
  </div>
</div>
